<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/mediumSpace"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/header"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/mediumSpace"
            android:text="Chat App"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/title"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/mediumSpace"
            android:text="Create new account"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mediumSpace"
            android:drawableLeft="@drawable/icon_name"
            android:background="@drawable/bg_edittext"
            android:drawablePadding="@dimen/mediumSpace"
            android:hint="@string/username"
            android:id="@+id/username"
            android:padding="@dimen/mediumSpace" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mediumSpace"
            android:drawableLeft="@drawable/ic_email"
            android:background="@drawable/bg_edittext"
            android:drawablePadding="@dimen/mediumSpace"
            android:hint="@string/email"
            android:id="@+id/email"
            android:padding="@dimen/mediumSpace" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mediumSpace"
            android:drawableLeft="@drawable/ic_lock"
            android:background="@drawable/bg_edittext"
            android:drawablePadding="@dimen/mediumSpace"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:id="@+id/password"
            android:padding="@dimen/mediumSpace" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/largeSpace"
            android:text="@string/register"
            android:background="@drawable/bg_register"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:padding="@dimen/mediumSpace"
            android:textSize="@dimen/largeFontSize" />

    </LinearLayout>


</RelativeLayout>